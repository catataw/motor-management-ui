<div class="card">
  <div class="card-content">
    <span class="card-title">Replace Form</span>
    <div class="row">
      <div class="col m4 xl3">
        <MdSelect @options={{pmList}} @label="PM" @selectedOption={{newForm.pm}} @initMessage="Select PM"></MdSelect>
      </div>
      <div class="col m4 xl3">
        <MdSelect @options={{equipmentList}} @label="Equipment"
                  @selectedOption={{newForm.equipment}} @initMessage="Select Equipment"></MdSelect>
      </div>
      <div class="col m4 xl3">
        <MdSelect @options={{userList}} @label="Equipment"
                  @selectedOption={{newForm.worker}} @initMessage="Select Mechanic"></MdSelect>
      </div>
    </div>

    <div class="row">
      <div class="col xl3">
        <label>Search series number from online equipment.</label>
        {{#power-select-multiple
          search=(action "searchSeriesNumber" 'online')
          options=offlineSearchList
          selected=offlineMotor
          placeholder="Series Number"
          onchange=(action (mut offlineMotor))
        as |offlineMotor|
        }}
          {{offlineMotor}}
        {{/power-select-multiple}}
      </div>

      <div class="col xl3">
        <label>Search series number from storage.</label>
        {{#power-select-multiple
          search=(action "searchSeriesNumber" 'stroage')
          options=onlineSearchList
          selected=onlineMotor
          placeholder="Series Number"
          onchange=(action (mut onlineMotor))
        as |onlineMotor|
        }}
          {{onlineMotor}}
        {{/power-select-multiple}}
      </div>
    </div>
  </div>
  <div class="card-action">
    <a class="waves-effect waves-light btn-small" onclick={{action 'cancelForm'}}><i class="material-icons left">cancel</i>Cnacel</a>
    <a class="waves-effect waves-light btn-small" onclick={{action 'saveForm'}}><i class="material-icons left">send</i>Save</a>
  </div>
</div>
