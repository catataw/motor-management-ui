              <!--<select>-->
                <!--<option value="" disabled selected>Choose your option</option>-->
                <!--<option value="1">To Repair</option>-->
                <!--<option value="2">To Drop</option>-->
              <!--</select>-->
            <!--</div>-->
          <!--</td>-->
        </tr>
      {{/each}}
      </tbody>
    </table>
  {{/if}}
</div>